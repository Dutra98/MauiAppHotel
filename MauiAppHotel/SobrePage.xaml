<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.SobrePage"
             Title="Sobre"
             BackgroundColor="#8B0000">

    <ContentPage.Content>
        <!-- ESSENCIAL! -->
        <ScrollView>
            <VerticalStackLayout Padding="30"
                                 Spacing="30"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="CenterAndExpand"
                                 WidthRequest="10000">

                <Label Text="Sobre"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />

                <Frame BackgroundColor="#F5F5F5"
                       CornerRadius="20"
                       Padding="25"
                       HasShadow="True"
                       BorderColor="#333333"
                       HorizontalOptions="Center"
                       WidthRequest="300">

                    <VerticalStackLayout Spacing="15"
                                         HorizontalOptions="Center"
                                         WidthRequest="260">

                        <Label Text="Aplicativo de Hospedagem"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#222222"
                               HorizontalTextAlignment="Center" />

                        <Label Text="Desenvolvido por: Thiago Dutra"
                               FontSize="16"
                               TextColor="#444444"
                               HorizontalTextAlignment="Center" />

                        <Label Text="Ano de desenvolvimento: 2025"
                               FontSize="16"
                               TextColor="#444444"
                               HorizontalTextAlignment="Center" />

                        <Label Text="App criado com .NET MAUI"
                               FontSize="12"
                               TextColor="#888888"
                               HorizontalTextAlignment="Center"
                               Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Voltar"
                        BackgroundColor="White"
                        TextColor="#8B0000"
                        CornerRadius="10"
                        Padding="10,5"
                        WidthRequest="120"
                        Clicked="OnVoltarClicked" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
